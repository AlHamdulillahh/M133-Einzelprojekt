<%- await include('views/includes/header.ejs', { title: 'Checkout' }) %>
<%- await include('views/includes/head.ejs') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <form action="/api/checkout" method="post" onsubmit="checkOut(this)">
                <div class="form-group">
                    <label class="control-label">Vorname</label>
                    <input type="text" required class="form-control" id="firstName">
                </div>

                <div class="form-group">
                    <label class="control-label">Nachname</label>
                    <input type="text" required class="form-control" id="lastName">
                </div>

                <div class="form-group">
                    <label class="control-label">E-Mail</label>
                    <input type="email" required class="form-control" id="email">
                </div>

                <button type="submit" class="btn btn-outline-primary">Einkauf abschliessen</button>
            </form>
        </div>
    </div>
</div>

<%- await include('views/includes/footer.ejs') %>